{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="owner">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="image">Image of yourself</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="detail">Additional Details</label>
        {{input value=detail id="detail"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
