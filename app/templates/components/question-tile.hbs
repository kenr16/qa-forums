<li>
  <hr>
  <div class="asker">
    <div class="row">
      <div class="col-sm-3">
        <div class="row">
          <img src={{question.image}}>
        </div>
        <div class="row">
          {{question.author}}
        </div>
      </div>
      <div class="col-sm-3">
        asked on {{question.date}}: "{{question.content}}"
      </div>
    </div>
  </div>

