{{#if updateQuestionForm}}
  <h4>Update {{question.Author}}'s {{question.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date" placeholder=question.date}}
      </div>

      <div class="form-group">
        <label for="image">Image of Yourself:</label>
        {{input value=image id="image" placeholder=question.image}}
      </div>

      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="detail">Additional Details:</label>
        {{input value=detail id="detail" placeholder=question.detail}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
